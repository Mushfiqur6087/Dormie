# Database Configuration
POSTGRES_DB=HMS
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Spring Boot Database Configuration (for Docker Compose)
SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/HMS
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres

# JPA Configuration
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true

# JWT Configuration
JWT_SECRET=your_jwt_secret_base64_encoded_here
JWT_EXPIRATION_MS=86400000

# SSLCommerz Payment Gateway Configuration
SSLCOMMERZ_STORE_ID=your_sslcommerz_store_id_here
SSLCOMMERZ_STORE_PASSWORD=your_sslcommerz_store_password_here
SSLCOMMERZ_SANDBOX_URL=https://sandbox.sslcommerz.com
SSLCOMMERZ_PRODUCTION_URL=https://securepay.sslcommerz.com
SSLCOMMERZ_ENVIRONMENT=sandbox

# File Upload Configuration
FILE_UPLOAD_DIR=./uploads

# Nominatim Geocoding API Configuration
NOMINATIM_BASE_URL=https://nominatim.openstreetmap.org/search
NOMINATIM_USER_AGENT=YourApp/1.0 (your-contact@email.com)

# Hall Configuration
HALL_POSTCODE=your_hall_postcode
